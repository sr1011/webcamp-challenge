<table>
    <% book.post_comments.each do |post_comment| %>
        <tr>
          <td>
              <p><%= image_tag("no-image-icon.jpg") %></p>
              <p><%= post_comment.user.name %></p>
          </td>
          <td>
              <%= post_comment.comment %>
          </td>
          <td>
            <% if post_comment.user == current_user %>
              
                    <%= link_to "削除", book_post_comment_path(post_comment.book, post_comment), method: :delete ,remote: true %>
                
            <% end %>
          </td>
        </tr>
    <% end %>
</table>

<%= form_with(model:[book, post_comment],  remote: true) do |f| %>
  <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
  <%= f.submit "送信する" %>
<% end %>
